<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Inherited view of journal Entry -->
    <record id="inherited_view_journal_entry" model="ir.ui.view">
        <field name="name">view.journal.entry.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='account_id']" position="attributes">
                <attribute name="options">{'no_create':True,'no_open':True}</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create':True,'no_open':True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
