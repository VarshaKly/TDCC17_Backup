<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- Template for Appointment By practitioner -->

	<template id="appointment_by_practitioner">
		<t t-call="web.html_container">
			<t t-call="web.internal_layout">
				<div class="page">
					<t t-set="total" t-value="0" />
					<div>
						<center>
							<b>
								<t t-esc="get_title" />
							</b>
						</center>
					</div>
					<div class="row" style="margin-top:30px;">
						<style>
							td,th {
							border-bottom: 1px solid black;
							}
						</style>
						<table
							style="border-bottom: 1px solid black; width: 70%; height:auto;border-collapse: collapse;">
							<thead>
								<tr>
									<th>Practitioner Name</th>
									<th>Count</th>
								</tr>
							</thead>
							<tbody>
								<tr t-foreach="get_data_from_report" t-as="data">
									<td>
										<span t-esc="data.get('physician')" />
									</td>
									<td>
										<span t-esc="data.get('number')" />
										<t t-set="total" t-value="total+data.get('number', 0)" />
									</td>
									<!-- <tr> <td>Total Appointments</td> <td></td> </tr> -->
								</tr>
							</tbody>
							<tr>
								<td>Total appointment</td>
								<td>
									<t t-esc="total" />
								</td>
							</tr>
						</table>
					</div>
				</div>
			</t>
		</t>
	</template>
</odoo>

