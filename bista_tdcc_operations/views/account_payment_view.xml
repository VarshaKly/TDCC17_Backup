<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_tree_tdcc" model="ir.ui.view">
        <field name="name">account.payment.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree" />
        <field name="arch" type="xml">
            <field name="amount" position="after">
                <field name="available_balance" force_save="1"/>
            </field>
            <field name="amount" position="before">
                <field name="payment_type"/>
            </field>
        </field>
    </record>

	<record id="payment_form_tdcc" model="ir.ui.view">
		<field name="name">account.payment.form.inherit</field>
		<field name="model">account.payment</field>
		<field name="inherit_id" ref="account.view_account_payment_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='payment_transaction_id']"
				position="after">
				<!-- <field name="service_group_id" options="{'no_create_edit': True}" 
					attrs="{'readonly': [('state', '!=', 'draft')]}"/> -->
				<field name="service_type_id"
					options="{'no_create_edit': True}"
					attrs="{'readonly': [('state', '!=', 'draft')],
                    'invisible': [('payment_type','!=','inbound')],
                    'required': [('payment_type','=','inbound'), ('partner_type', '=', 'customer')]}" />
				<!-- <field name="appointment_type_id" options="{'no_create_edit': True}" 
					attrs="{'readonly': [('state', '!=', 'draft')]}"/> -->
				<field name="physician_type"
					attrs="{'invisible': [('payment_type','!=','inbound')],
                            'required': [('payment_type','=','inbound'), ('partner_type', '=', 'customer')],
                            'readonly':[('state','!=','draft')]}" />
				<field name="physician_id"
					attrs="{'invisible': ['|', ('physician_type','=','multi'),
                                               ('payment_type','!=','inbound')],
                            'readonly':[('state','!=','draft')],
                            'required': [('physician_type','=','single'), ('payment_type','=','inbound'), ('partner_type', '=', 'customer')]}"
					options="{'no_create_edit': True}" />
				<field name="multi_physician_ids"
					attrs="{'invisible': ['|',('physician_type','=','single'),
                                             ('payment_type','!=','inbound')],
                            'readonly':[('state','!=','draft')],
                                             'required': [('physician_type','=','multi'), ('payment_type','=','inbound'), ('partner_type', '=', 'customer')]}" />
			</xpath>
			<xpath expr="//button[@name='post']" position="after">
                <button name="action_send_payment_mail" class="oe_highlight"
                    attrs="{'invisible': [('payment_type','!=','inbound')]}" string="Send Mail"
                    type="object" />
            </xpath>
			<field name="journal_id" position="after">
				<field name="payment_info"/>
				<field name="available_balance" force_save="1" attrs="{'invisible': [('payment_type','!=','inbound')]}"/>
				<field name="tdcc_voucher_id" invisible="1" />
				<field name="tdcc_voucher_sequence" invisible="1" />
				<field name="tdcc_cheque_date" invisible="1" />
				<field name="tdcc_cheque_due_date" invisible="1" />
				<field name="tdcc_cheque_no" invisible="1" />
			</field>
			<xpath
				expr="//sheet/div[@name='button_box']/button[@name='button_invoices']"
				position="after">
				<button class="oe_stat_button" name="view_open_invoices"
					string="Open Invoices" type="object" icon="fa-bars" attrs="{'invisible': [('partner_type','!=','customer')]}"/>
			</xpath>
			<xpath expr="//header/button[@name='action_draft']"
				position="after">
				<button
					name="%(bista_tdcc_operations.payment_cancel_request_action)d"
					class="oe_highlight" string="Request for Cancel Payment"
					type="action"
					attrs="{'invisible': ['|','|',('state','not in',('posted', 'sent')),
                                               ('allow_cancel','!=',False),
                                               ('partner_type', '=', 'supplier')]}" />
				<button name="action_approve_cancel_payment"
					class="oe_highlight"
					groups="bista_tdcc_operations.group_tdcc_cofounder"
					string="Approve" type="object"
					attrs="{'invisible': ['|',('payment_cancel_req_sent','=',False),
                                              ('allow_cancel','!=',False)]}" />
			</xpath>
			<xpath expr="//sheet/group" position="after">
				<notebook>
					<page string="Cancellation Details"
						attrs="{'invisible': [('payment_cancel_req_sent','=',False)]}">
						<group>
							<group string="Request Details">
								<field name="allow_cancel" invisible="1" />
								<field name="payment_cancel_req_sent" invisible="1" />
								<field name="payment_cancel_req_user_id" readonly="1"
									force_Save="1" />
								<field name="payment_cancel_req_date" readonly="1"
									force_Save="1" />
							</group>
							<group string="Approval Details"
								attrs="{'invisible': [('allow_cancel','=',False)]}">
								<field name="approval_by" readonly="1" force_Save="1" />
								<field name="approval_date" readonly="1" force_Save="1" />
							</group>
							<group string="Cancelled Details"
								attrs="{'invisible': [('cancelled_by','=',False)]}">
								<field name="cancelled_by" readonly="1" force_Save="1" />
								<field name="cancelled_date" readonly="1" force_Save="1" />
								<field name="cancel_reason" readonly="1" force_Save="1" />
							</group>
						</group>
					</page>
				</notebook>
			</xpath>
		</field>
	</record>

	<record id="cancel_payment_form_tdcc" model="ir.ui.view">
		<field name="name">account.payment.form.inherit</field>
		<field name="model">account.payment</field>
		<field name="inherit_id"
			ref="account_cancel.payment_cancel_form_inherit" />
		<field name="arch" type="xml">
			<xpath expr="//form" position="inside">
				<field name="allow_cancel" invisible="1" />
			</xpath>
			<xpath expr="//button[@name='cancel']" position="attributes">
				<attribute name="attrs">
					{'invisible': [('state', 'in', ['draft','cancelled']),'|',
					('allow_cancel', '=', False),
					('partner_type', '=', 'customer')]}
				</attribute>
			</xpath>
		</field>
	</record>

	<!-- Tree view of Account Payment Physician -->
	<record id="tree_view_account_payment_physician"
		model="ir.ui.view">
		<field name="name">tree.view.account.payment.physician</field>
		<field name="model">account.payment.physician</field>
		<field name="arch" type="xml">
			<tree editable="bottom">
				<field name="physician_id"
					domain="[('is_physician','=',True)]"
					options="{'no_create_edit': True}" />
				<field name="amount" />
			</tree>
		</field>
	</record>

