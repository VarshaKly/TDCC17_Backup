<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- Attendance Form View -->
	<record id="attendance_form_view_tdcc" model="ir.ui.view">
		<field name="name">attendance.form.view</field>
		<field name="model">attendance.attendance</field>
		<field name="arch" type="xml">
			<form string="Attendance">
				<sheet>
					<group col="4">
					    <field name="classroom_id" required="1"/>
					    <field name="educator_id" required="1"/>
					    <field name="student_id" required="1" />
						<field name="date" required="1" />
						<field name="status" required="1"/>
					</group>
					<notebook>
					    <page string="Remark">
					        <field name="remark"/>
					    </page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<!-- Attendance Tree View -->
    <record id="attendance_tree_view_tdcc" model="ir.ui.view">
        <field name="name">attendance.tree.view</field>
        <field name="model">attendance.attendance</field>
        <field name="arch" type="xml">
            <tree string="Attendance">
                <field name="date"/>
                <field name="classroom_id"/>
                <field name="student_id"/>
            </tree>
        </field>
    </record>
    
	<!-- Attendance Search View -->
    <record id="attendance_search_view_tdcc" model="ir.ui.view">
        <field name="name">attendance.search.view</field>
        <field name="model">attendance.attendance</field>
        <field name="arch" type="xml">
            <search>
                <field name="classroom_id"/>
                <field name="student_id"/>
                <filter string="Present" name="fil_present" domain="[('status', '=', 'present')]"/>
                <filter string="Absent" name="fil_absent" domain="[('status', '=', 'absent')]"/>
                 <group expand="0" string="Group By">
                        <filter string="Class" name="state" domain="[]"
                            context="{'group_by':'classroom_id'}" />
                        <filter string="Student" name="student" domain="[]"
                            context="{'group_by':'student_id'}" />
                        <filter string="Result" name="status" domain="[]"
                            context="{'group_by':'status'}" />
                    </group>
            </search>
        </field>
    </record>
    
    <!-- Attendance Sheet Form View -->
    <record id="attendance_sheet_form_view_tdcc" model="ir.ui.view">
        <field name="name">attendance.sheet.form.view</field>
        <field name="model">eip.attendance.sheet</field>
        <field name="arch" type="xml">
            <form string="Attendance">
                <sheet>
                    <group col="4">
                        <field name="classroom_id" required="1"/>
                        <field name="educator_id" required="1"/>
                        <field name="date" required="1" />
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="att_lines" context="{'default_educator_id': educator_id,'default_date': date,'default_classroom_id': classroom_id}">
                                <tree editable="bottom">
                                <field name="student_id" required="1"/>
                                <field name="status" required="1"/>
                                <field name="remark"/>
                                <field name="classroom_id" invisible="1"/>
		                        <field name="educator_id" invisible="1"/>
		                        <field name="date" invisible="1" />
                               </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Attendance Sheet Tree View -->
    <record id="attendance_sheet_tree_view_tdcc" model="ir.ui.view">
        <field name="name">attendance.sheet.tree.view</field>
        <field name="model">eip.attendance.sheet</field>
        <field name="arch" type="xml">
            <tree string="Attendance">
                <field name="classroom_id" required="1"/>
                <field name="educator_id" required="1"/>
                <field name="date" required="1" />
            </tree>
        </field>
    </record>
    
    <!-- Attendance Sheet Search View -->
    <record id="attendance_sheet_search_view_tdcc" model="ir.ui.view">
        <field name="name">attendance.search.view</field>
        <field name="model">eip.attendance.sheet</field>
        <field name="arch" type="xml">
            <search>
                <field name="classroom_id"/>
                <field name="educator_id"/>
                 <group expand="0" string="Group By">
                        <filter string="Classroom" name="state" domain="[]"
                            context="{'group_by':'classroom_id'}" />
                        <filter string="Educator" name="educator" domain="[]"
                            context="{'group_by':'educator_id'}" />
                        <filter string="Date" name="date" domain="[]"
                            context="{'group_by':'date'}" />
                    </group>
            </search>
        </field>
    </record>

	<!-- Attendance  Action -->
	<record id="attendance_action_tdcc" model="ir.actions.act_window" >
		<field name="name">Attendance</field>
		<field name="res_model">attendance.attendance</field>
		<field name="view_mode">tree,form</field>
	</record>

	<!-- Attendance Menu -->
	<menuitem id="attendance_menu" parent="bista_tdcc_operations.eip_menu"
		action="attendance_action_tdcc"/>


<!-- Attendance Sheet Action -->
    <record id="attendance_sheet_action_tdcc" model="ir.actions.act_window" >
        <field name="name">Attendance Sheet</field>
        <field name="res_model">eip.attendance.sheet</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Attendance Menu -->
    <menuitem id="attendance_sheet_menu" parent="bista_tdcc_operations.eip_menu"
        action="attendance_sheet_action_tdcc"/>
        
</odoo>
