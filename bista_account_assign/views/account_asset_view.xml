<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--Account Asset-->
    <record id="view_account_asset_form_haji" model="ir.ui.view">
        <field name="name">account.asset.form.haji</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="department_id" readonly="1"/>
                <field name="employee_id" readonly="1"/>
                <field name="recovery_amount"/>
            </xpath>
            <xpath expr="//button[@name='open_entries']" position="before">
                <button class="oe_stat_button"
                        name="set_assign_realise" type="object" icon="fa-laptop">
                    <field name="asset_toggle"
                           widget="boolean_button"
                           options='{"terminology": {"string_true": "Assigned", "string_false":"Released",
                               "hover_true":"Release", "hover_false": "Assign"}}'/>
                </button>
            </xpath>
            <notebook position="inside">
                <page string="Assets History">
                    <field name="asset_history_ids">
                        <tree create="false">
                            <field name="employee_id"/>
                            <field name="department_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <menuitem id="menu_action_account_asset_asset_form_inherited"
              parent="bista_hr.menu_employee"
              action="account_asset.action_account_asset_asset_form"
              groups="bista_account_assign.group_assets_officer"
              sequence="4"/>

    <!-- Inherited HR Employee Form View -->
    <record id="inherited_hr_emp_form_view_added_asset_button" model="ir.ui.view">
        <field name="name">inherited.hr.emp.form.view.added.asset.button</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <button name="toggle_active" position="before">
                <button name="on_smart_button_click"
                        class="oe_stat_button"
                        icon="fa-briefcase"
                        string="Assets"
                        type="object"
                        context="{'action_id':'account_asset.action_account_asset_asset_form'}"
                />
            </button>
        </field>
    </record>
</odoo>