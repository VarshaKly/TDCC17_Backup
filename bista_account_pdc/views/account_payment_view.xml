    <!-- Inherited search view of payments -->
     <record id="inherited_search_view_account_payment_tdcc" model="ir.ui.view">
        <field name="name">inherit.search.view.account.payment.tdcc</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                 <field name="move_name" filter_domain="[('move_name','ilike',self)]" string="Journal Entry Name"/>
            </field>
        </field>
