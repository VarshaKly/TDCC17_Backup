<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sales_commision_view_users_form" model="ir.ui.view">
        <field name="name">res.users.form.commision</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="sales_commision" string="Sales Commision">
                    <group>
                        <group>
                            <field name="allow_commission"/>
                        </group>
                        <group/>
                        <group attrs="{'invisible': [('allow_commission', '=', False)]}">
                            <field name="commission_account_id"
                                options="{'no_create_edit': True, 'no_open': True}"
                                attrs="{'required': [('allow_commission', '!=', False)]}"/>
                            <field name="commission_expense_account_id"
                                options="{'no_create_edit': True, 'no_open': True}"
                                attrs="{'required': [('allow_commission', '!=', False)]}" />
                        </group>
                        <group attrs="{'invisible': [('allow_commission', '=', False)]}">
                                <field name="sales_limit"
                                attrs="{'required': [('allow_commission', '!=', False)]}" />
                            <field name="cut_off_date"
                                attrs="{'required': [('allow_commission', '!=', False)]}" />
                            <field name="commission_percentage"
                                attrs="{'required': [('allow_commission', '!=', False)]}" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
