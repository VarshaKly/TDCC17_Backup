<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard Tax Report -->
        <record id="tax_report_wizard_form" model="ir.ui.view">
            <field name="name">tax.report.form.wizard</field>
            <field name="model">tax.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Receipt Payment Mode">
                    <group>
                        <group colspan="4" col="4">
                            <field name="start_date" required="1"/>
                            <field name="end_date" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_pdf_report" string="Print PDF"
                                type="object" class="oe_highlight"/>
                        <button name="print_xls_report" string="Print XLS"
                                type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"
                                class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="received_tax_request_wizard" model="ir.actions.act_window">
            <field name="name">Vat Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tax.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="tax_report_wizard_form"/>
            <field name="target">new</field>
        </record>
        
        <record id="tax_report_print_link_view" model="ir.ui.view">
            <field name="name">tax.report.print.link</field>
            <field name="model">tax.report.print.link</field>
            <field name="arch" type="xml">
                <form string="Excel Output">
                    <separator colspan="4" string="Please save file as .xls excel format"/>
                    <group>
                        <field name="name" invisible="1"/>
                        <field name="tax_xls_output" filename='name' readonly='1'/>
                    </group>
                    <footer>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
