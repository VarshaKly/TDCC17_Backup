            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force"> ['|',('company_id','in',user.company_ids.ids),('company_id','=',False)]</field>
            <field eval="True" name="global"/>
        </record>

        <!-- Allow Company Rule for Contract -->
