	<!-- Search view of account Payment -->
	<record id="seach_view_account_payment" model="ir.ui.view">
		<field name="name">search.view.account.payment</field>
		<field name="model">account.payment</field>
		<field name="inherit_id"
			ref="account.view_account_payment_search" />
		<field name="arch" type="xml">
			<field name="name"
				filter_domain="['|', '|', ('name','ilike',self), ('communication','ilike',self), ('tdcc_voucher_sequence', 'ilike', self)]"
				string="Description" />
			<xpath expr="//filter[@name='company']" position="after">
				<filter string="Physician" name="physician" domain="[]"
					context="{'group_by': 'physician_id'}" />
				<filter string="Physician Type" name="physiciantype"
					domain="[]" context="{'group_by': 'physician_type'}" />
			</xpath>
		</field>
	</record>

	<!-- Inherited Register Payment form view -->
	<record id="inherited_account_register_payment_invoice_form_1"
		model="ir.ui.view">
		<field name="name">inherited.account.payment.invoice.wizard.form.1
		</field>
		<field name="model">account.payment</field>
		<field name="inherit_id"
			ref="account.view_account_payment_invoice_form" />
		<field name="arch" type="xml">
			<field name="journal_id" position="after">
				<field name="physician_type"
					attrs="{'invisible': [('payment_type','!=','inbound'), ('partner_type', '!=', 'customer')],
                        'required': [('payment_type','=','inbound'), ('partner_type', '=', 'customer')]}" />
				<field name="service_type_id"
					options="{'no_create':True,'no_open':True}"
					attrs="{'invisible': [('payment_type','!=','inbound')],
                            'required': [('payment_type','=','inbound')]}" />
			</field>
			<field name="communication" position="after">
				<field name="physician_id"
					attrs="{'invisible': ['|', '|', ('physician_type','=','multi'),
                                               ('payment_type','!=','inbound'),
                                               ('partner_type', '!=', 'customer')],
                            'required': [('payment_type','=','inbound'), ('partner_type', '=', 'customer'), ('physician_type','=','single')]}"
					options="{'no_create':True,'no_open':True}" />
				<field name="multi_physician_ids"
					attrs="{'invisible': ['|', '|', ('physician_type','=','single'),
                                             ('payment_type','!=','inbound'),
                                             ('partner_type', '!=', 'customer')],
                                             'required': [('physician_type','=','multi'), ('payment_type','=','inbound'), ('partner_type', '=', 'customer')]}" />
			</field>
		</field>
	</record>

	<!-- Inherit Multiple register payment -->
	<record id="inherited_multiple_payment_form_view"
		model="ir.ui.view">
		<field name="name">inherited.multiple.payment.form.view
		</field>
		<field name="model">account.register.payments</field>
		<field name="inherit_id"
			ref="account.view_account_payment_from_invoices" />
		<field name="arch" type="xml">
			<field name="journal_id" position="after">
				<field name="physician_type"
					attrs="{'invisible': [('payment_type','!=','inbound')],
                               'required': [('payment_type','=','inbound')]}" />
				<field name="user_id" options="{'no_create':True,'no_open':True}" invisible="1"/>
				<field name="service_type_id"
					options="{'no_create':True,'no_open':True}"
					attrs="{'invisible': [('payment_type','!=','inbound')],
                            'required': [('payment_type','=','inbound')]}" />
			</field>
			<field name="group_invoices" position="after">
				<field name="physician_id"
					attrs="{'invisible': ['|', ('physician_type','=','multi'),('payment_type','!=','inbound')],
                            'required': [('physician_type','=','single'),('payment_type','=','inbound')]}"
					options="{'no_create':True,'no_open':True}" />
				<field name="multi_physician_ids"
					attrs="{'invisible': ['|', ('physician_type','=','single'),('payment_type','!=','inbound')],
                            'required': [('physician_type','=','multi'), ('payment_type','=','inbound')]}" />
			</field>
		</field>
	</record>

</odoo>
