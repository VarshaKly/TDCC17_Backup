<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="account_invoice_payment_term_view" model="ir.ui.view">
        <field name="name">account.invoice.payment.term.view</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[2]" position="after">
                <page name="invoice_payment_lines" string="Invoice Payment Lines" attrs="{'invisible': [('type', '!=', 'out_invoice')]}">
                    <field name="invoice_payment_line_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                        <tree string="Invoice Payment Lines" editable="bottom">
                            <field name="payment_date" required="1"/>
                            <field name="amount" required="1" sum="Total"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
