<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <!-- Email template for Kind Reminder -->
    <record id="accounts_kind_reminder_mail_template" model="mail.template">
        <field name="name">Accounts/Kind Reminder</field>
        <field name="model_id" ref="bista_tdcc_operations.model_res_partner"/>
        <field name="subject">Kind reminder</field>
        <field name="email_from">${user.partner_id.email or ''}</field>
        <field name="email_to"></field>
        <field name="partner_to">${object.id}</field>
        <field name="body_html" type="html">
            <div>
            <p>
                Dear Parents,<br/><br/>
                We are in the process of closing the accounts for the month. The system shows us an outstanding amount of  XXXX.
                We would appreciate it if you can settle it as soon as possible.
                
            </p>
            <p>
                If you have trouble with payments please come to us.
            </p>
            <p>
                We are happy to work with you and coordinate a payment plan for your outstanding debt. 
            </p>

            <br/>
            Thank you<br/><br/>
        </div>
        </field>
        <field name="auto_delete" eval="False"/>
    </record>
    
