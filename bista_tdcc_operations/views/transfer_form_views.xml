<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- Transfer Form Form -->
	<record model="ir.ui.view" id="transfer_form_form">
		<field name="name">transfer.form.form</field>
		<field name="model">transfer.form</field>
		<field name="arch" type="xml">
			<form string="Transfer Form Form">
				<sheet>
					<group>
						<group>
							<field name="school_center" />
							<field name="student_id" options="{'no_create': True}"
								domain="[('is_student', '=', True)]" required="1" />
						</group>
						<group>
							<field name="dob" readonly="1" />
							<field name="nationality_id" options="{'no_create': True}" />
						</group>
					</group>
					<group>
						<group>
							<field name="attendance_start_date" required="1" />
							<field name="attendance_end_date" required="1" />
						</group>
						<group>
							<field name="attainment_level" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<!-- Transfer Form List -->
	<record model="ir.ui.view" id="transfer_form_tree">
		<field name="name">transfer.form.tree</field>
		<field name="model">transfer.form</field>
		<field name="arch" type="xml">
			<tree string="Transfer Form List">
				<field name="school_center" />
				<field name="student_id" />
				<field name="dob" />
				<field name="nationality_id" />
				<field name="attendance_start_date" />
				<field name="attendance_end_date" />
			</tree>
		</field>
	</record>

	<!-- Transfer Form Search -->
	<record model="ir.ui.view" id="transfer_from_search">
		<field name="name">transfer.form.search</field>
		<field name="model">transfer.form</field>
		<field name="arch" type="xml">
			<search>
				<field name="school_center" />
				<field name="student_id" />
			</search>
		</field>
	</record>

	<!-- Transfer Form Action -->
	<record model="ir.actions.act_window" id="transfer_form_action">
		<field name="name">Transfer Form</field>
		<field name="res_model">transfer.form</field>
		<field name="view_mode">tree,form</field>
	</record>

	<!-- Transfer Form Menu -->
	<menuitem id="transfer_form_menu" parent="bista_tdcc_operations.eip_menu"
		action="transfer_form_action" sequence="10"
		groups="bista_tdcc_operations.group_tdcc_director,bista_tdcc_operations.group_tdcc_eip_eiip_manager"/>

</odoo>
