<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Classroom Form -->
    <record model="ir.ui.view" id="classroom_form">
        <field name="name">classroom.form</field>
        <field name="model">school.classroom</field>
        <field name="arch" type="xml">
            <form string="Classrooms">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                         <!-- Smart Button for Open Attendance -->
                        <button name="open_attendance" type="object"
                                class="oe_stat_button"
                                icon="fa-calendar">
                           <field string="Attendance" name="class_attendance_count"
                                   widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field
                                name="clinic_id"
                                options="{'no_create': True}"
                            />
                        </group>
                        <group>
                            <field name="class_id" required="1" options="{'no_create': True}"/>
                            <field name="term_id" required="1" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Staffs">
                            <field
                                name="staff_ids"
                                options="{'no_create': True}"
                                domain="['|', ('is_physician', '=', True),
                                        ('is_teacher', '=', True)]"
                            />
                        </page>
                        <page string="Students">
                            <field
                                name="student_ids"
                                options="{'no_create': True}"
                                domain="[('is_student', '=', True)]"
                            />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Classroom List -->
    <record model="ir.ui.view" id="classroom_tree">
        <field name="name">classroom.tree</field>
        <field name="model">school.classroom</field>
        <field name="arch" type="xml">
            <tree string="ClassRooms">
                <field name="name"/>
                <field name="clinic_id" invisible="1"/>
                <field name="class_id"/>
                <field name="term_id"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

	<!-- Classroom Search -->
	<record model="ir.ui.view" id="classroom_search">
		<field name="name">classroom.search</field>
		<field name="model">school.classroom</field>
		<field name="arch" type="xml">
			<search>
				<field name="name" />
				<filter string="Archived" name="inactive" domain="[('active','=',False)]" />
			</search>
		</field>
	</record>

	<!-- Classroom Action -->
	<record model="ir.actions.act_window" id="classroom_action">
		<field name="name">ClassRooms</field>
		<field name="res_model">school.classroom</field>
		<field name="view_mode">tree,form</field>
	</record>

	<!-- Classroom Menu -->
	<menuitem id="classroom_menu" action="classroom_action"
		parent="bista_tdcc_operations.eip_eiip_configuration_menu" />


    <!-- Class Form -->
    <record model="ir.ui.view" id="school_class_form">
        <field name="name">school.class.form</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form string="Class">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field
                                name="clinic_id"
                                options="{'no_create': True}"
                            />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Class List -->
    <record model="ir.ui.view" id="school_class_tree">
        <field name="name">school.class.tree</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <tree string="Class">
                <field name="name"/>
                <field name="clinic_id" invisible="1"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Class Search -->
    <record model="ir.ui.view" id="school_class_search">
        <field name="name">school.class.search</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]" />
            </search>
        </field>
    </record>

    <!-- Class Action -->
    <record model="ir.actions.act_window" id="school_class_action">
        <field name="name">Class</field>
        <field name="res_model">school.class</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Class Menu -->
    <menuitem
        id="school_class_menu"
        action="school_class_action"
        parent="bista_tdcc_operations.eip_eiip_configuration_menu"
    />

</odoo>
