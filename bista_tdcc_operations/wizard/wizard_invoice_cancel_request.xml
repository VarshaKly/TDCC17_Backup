<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="appointment_cancel_invoice_request_form" model="ir.ui.view">
            <field name="name">wizard.cancel.invoce.requestform</field>
            <field name="model">wizard.cancel.invoice.request</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="invoice_cancel_reason_id" string="Cancel Reason"
                                required="1"/>
                         </group>
                    </sheet>
                    <footer>
                        <button string="Cancel Request" name="cancel_invoice_request" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="appointment_cancel_invoice_request_action" model="ir.actions.act_window">
                <field name="name">Cancel Invoice Request</field>
                <field name="res_model">wizard.cancel.invoice.request</field>
                <field name="view_mode">form</field>
                <field name="context">{'appointment_id':active_id}</field>
                <field name="target">new</field>
        </record>

</odoo>