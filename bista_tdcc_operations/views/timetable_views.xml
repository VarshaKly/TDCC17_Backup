<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- Time Table Form -->
	<record model="ir.ui.view" id="time_table_form">
		<field name="name">time.table.form</field>
		<field name="model">time.table</field>
		<field name="arch" type="xml">
			<form string="Time Table Form">
				<sheet>
					<group colspan="4">
						<field name="name" required="1" />
					</group>
					<group>
						<group>
							<field name="lead_educator_id" domain="[('is_teacher', '=', True)]"
								options="{'no_create_edit': True}" required="1" />
							<field name="speech_therapist_id" domain="[('is_teacher', '=', True)]"
								options="{'no_create_edit': True}" />
							<field name="class_id" options="{'no_create_edit': True}"
								required="1" />
							<field name="date_from" />
						</group>
						<group>
							<field name="educator_id" domain="[('is_teacher', '=', True)]"
								options="{'no_create_edit': True}" />
							<field name="occupational_therapist_id" domain="[('is_teacher', '=', True)]"
								options="{'no_create_edit': True}" />
							<field name="term_id" options="{'no_create_edit': True}"
								required="1" />
							<field name="date_to" />
						</group>
					</group>
					<group colspan="2">
						<field name="student_ids" domain="[('is_student', '=', True)]"
							widget="many2many_tags" options="{'no_create_edit': True}" />
						<field name="clinic_id" invisible="1" />
					</group>
					<notebook>
						<page string="Time Table Lines">
							<field name="timetable_line_ids" colspan="4" nolabel="1">
								<tree editable="bottom">
									<field name="time_from" widget="float_time" required="1" />
									<field name="time_to" widget="float_time" />
									<field name="week_day" />
									<field name="activity_1" required="0" />
									<field name="activity_2" />
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<!-- Time Table List -->
	<record model="ir.ui.view" id="time_table_tree">
		<field name="name">time.table.tree</field>
		<field name="model">time.table</field>
		<field name="arch" type="xml">
			<tree string="Time Table List">
				<field name="lead_educator_id" />
				<field name="educator_id" />
				<field name="speech_therapist_id" />
				<field name="occupational_therapist_id" />
				<field name="term_id" />
				<field name="class_id" />
				<field name="date_from" widget="float_time" />
				<field name="date_to" widget="float_time" />
			</tree>
		</field>
	</record>

	<!-- Time Table Search -->
	<record model="ir.ui.view" id="time_table_search">
		<field name="name">time.table.search</field>
		<field name="model">time.table</field>
		<field name="arch" type="xml">
			<search>
				<field name="lead_educator_id" />
				<field name="educator_id" />
				<filter name="lead_educator_group_by" string="Lead Educator"
					context="{'group_by': 'lead_educator_id'}" />
				<!-- <filter name="educator_group_by" string="Educator" context="{'group_by': 
					'educator_id'}" /> <filter name="speech_therapist_group_by" string="Speech 
					and Language Therapist" context="{'group_by': 'speech_therapist_id'}" /> 
					<filter name="occupational_therapist_group_by" string="Occupational Therapist" 
					context="{'group_by': 'occupational_therapist_id'}" /> -->
				<filter name="class_group_by" string="Class"
					context="{'group_by': 'class_id'}" />
				<filter name="term_group_by" string="Term beginning" context="{'group_by':'term_id'}" />
				<filter string="Archived" name="inactive" domain="[('active','=',False)]" />
			</search>
		</field>
	</record>

	<!-- Time Table Action -->
	<record model="ir.actions.act_window" id="time_table_action">
		<field name="name">Time Table</field>
		<field name="res_model">time.table</field>
		<field name="view_mode">tree,form</field>
	</record>

	<!-- Time Table Menu -->
	<!-- <menuitem id="time_table_menu" action="time_table_action" parent="bista_tdcc_operations.eip_menu" 
		sequence="13" /> -->

</odoo>
