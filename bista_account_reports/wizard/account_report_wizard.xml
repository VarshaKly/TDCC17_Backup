<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard Account Report -->
        <record id="account_report_wizard_form" model="ir.ui.view">
            <field name="name">account.report.form.wizard</field>
            <field name="model">account.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Receipt Payment Mode">
                    <group>
                        <group colspan="4" col="4">
                            <field name="start_date" required="1"/>
                            <field name="end_date" required="1"/>
                            <field name="report_type" required="1"/>
                            <field name="report_format"
                                   attrs="{'invisible':[('report_type','in',('receipt_by_payment_method_je','appoint_by_practitioner','allocation_by_practitioner'))],
                                           'required':[('report_type','in',('receipt_by_payment_method_je', 'receipt_by_payment_method','sales_by_practitioner','sales_by_service_type'))]}"/>
                            <field name="client_id" attrs="{'invisible': [('report_type','in',('sales_by_practitioner','sales_by_service_type','allocation_by_practitioner','appoint_by_practitioner'))]}"
                                   options="{'no_create':True,'no_open':True}"/>
                           <!--  <field name="user_id"
                                   attrs="{'invisible': [('report_type','in',('receipt_by_payment_method','sales_by_service_type'))]}"/> -->
                            <field name="phy_id"
                                   options="{'no_create':True,'no_open':True}"
                                   attrs="{'invisible': [('report_type','in',('receipt_by_payment_method_je','receipt_by_payment_method','sales_by_service_type'))]}"/>
                            <field name="with_name"
                                   attrs="{'invisible': [('report_type','in',('receipt_by_payment_method_je','receipt_by_payment_method','sales_by_service_type','sales_by_practitioner'))]}"/>
                            <field name="service_type_id"
                                   options="{'no_create':True,'no_open':True}"
                                   attrs="{'invisible': [('report_type','in',('receipt_by_payment_method_je','allocation_by_practitioner','appoint_by_practitioner','receipt_by_payment_method','sales_by_practitioner'))]}"/>
                            <field name="service_type_ids" widget="many2many_tags" attrs="{'invisible': [('report_type','in',('receipt_by_payment_method_je','sales_by_service_type','sales_by_practitioner','appoint_by_practitioner','allocation_by_practitioner'))]}"/>
                            <field name="code_id"
                                   options="{'no_create':True,'no_open':True}" 
                                   attrs="{'invisible':[('report_type','in',('receipt_by_payment_method_je','receipt_by_payment_method','sales_by_service_type'))]}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_report" string="Print"
                                type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"
                                class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="received_request_wizard" model="ir.actions.act_window">
            <field name="name">Account Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_report_wizard_form"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
