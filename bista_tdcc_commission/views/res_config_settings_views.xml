<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_sales_commission" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.sales.commission</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='account']" position="inside">
                <h2>Sales Commission</h2>
                <div class="row mt16 o_settings_container" groups="base.group_no_one">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="commission_journal_id" string="Commission Journal"/>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="commission_journal_id"
                                    class="o_light_label"
                                    options="{'no_create_edit': True, 'no_open': True}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
