<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_loan">
    <t t-call="web.html_container">
        <t t-call="web.external_layout">
            <t t-if="not docs">
                <div class="page" >
                <div class="oe_structure"/>
                    <div class="row">
                        <h3>No matching records found!.</h3>
                    </div>
                </div>
            </t>
            <t t-if="docs">
                <t t-foreach="docs" t-as="o">
                    <div class="page" >
                    <div class="oe_structure"/>
                        <p style="page-break-after:always;"/>
                         <t t-foreach="doc_ids" t-as="wiz">
                                <div class="col-xs-12" style="font-size:22px;">
                                    Loan Report From:
                                    <t t-esc="wiz.date_from"/> to <t t-esc="wiz.date_to"/>.
                                </div>
                            </t>
                            <style type="text/css">
                                td.text-center{
                                align:center;
                                }
                            </style>
                            <br/>
                            <!-- Employee Info -->
                            <table class="table table-bordered"
                                   width="100%" height="100%"
                                   style="border: 1px solid #000000;font-size:20px">
                                <tbody>
                                    <tr bgcolor="#D3D3D3">
                                        <td height="10%"
                                            class="text-center">
                                            <b>Name</b>
                                        </td>
                                        <td height="10%"
                                            class="text-center">
                                            <b>Nationality</b>
                                        </td>

                                        <td height="10%"
                                            class="text-center">
                                            <b>Join Date</b>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td height="10%"
                                            class="text-center">
                                            <span t-esc="o.employee_id.name"/>
                                        </td>

                                        <td height="10%"
                                            class="text-center">
                                            <span t-esc="o.employee_id.country_id.name"/>
                                        </td>
                                        <td height="10%"
                                            class="text-center">
                                            <span t-esc="o.employee_id.date_joining"/>
                                        </td>
                                    </tr>
                                    <tr bgcolor="#D3D3D3">
                                        <td height="10%"
                                            class="text-center">
                                            <b>Department</b>
                                        </td>
                                        <td height="10%"
                                            class="text-center">
                                            <b>Job Title</b>
                                        </td>
                                        <td height="10%" colspan="3"
                                            class="text-center">
                                            <b>Email Address</b>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td height="10%"
                                            class="text-center">
                                            <span t-esc="o.department_id.name"/>
                                        </td>
                                        <td height="10%"
                                            class="text-center">
                                            <span t-esc="o.employee_id.job_id.name"/>
                                        </td>
                                        <td height="10%" colspan="3"
                                            class="text-center">
                                            <span t-esc="o.employee_id.work_email"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <!-- Loan Request Information -->
                            <table class="table table-bordered"
                                   style="border: 1px solid #000000;font-size:20px">
                                <tbody>

                                    <tr>
                                        <td  width="20%">
                                            <b>Request Number</b>
                                        </td>
                                        <td  width="25%">
                                            <t t-if="o.name">
                                                <span t-esc="o.name"/>
                                            </t>
                                        </td>
                                        <td  width="25%">
                                            <b>Total Amount</b>
                                        </td>
                                        <td width="30%" class="text-right">
                                            <t
                                                    t-if="o.loan_amount">
                                                <span
                                                        t-esc="o.loan_amount"/>
                                            </t>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td  width="20%">
                                            <b>
                                                Loan Issuing Date
                                            </b>
                                        </td>
                                        <td  width="25%">
                                            <t t-if="o.loan_issuing_date">
                                                <span t-field="o.loan_issuing_date"
                                                      t-field-options='{"format": "YYYY-MM-dd"}'/>
                                            </t>
                                        </td>
                                        <td  width="25%">
                                            <b>
                                                Total Paid Installment Amount
                                            </b>
                                        </td>
                                        <td  width="30%" class="text-right">
                                            <t t-if="o.total_paid_installment_amount">
                                                <span t-esc="o.total_paid_installment_amount"/>
                                            </t>
                                            <t t-if="not o.total_paid_installment_amount">
                                                0.0
                                            </t>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td  width="20%">
                                            <b>Loan Installments</b>
                                        </td>
                                        <td width="25%">
                                            <t
                                                    t-if="o.installment_number">
                                                <span
                                                        t-esc="o.installment_number"/>
                                            </t>
                                        </td>
                                        <td width="25%">
                                            <b>Remaining Installments Total Amount</b>
                                        </td>
                                        <td width="30%" class="text-right">
                                            <t t-if="o.remaining_installments_total_amount">
                                                <span t-esc="o.remaining_installments_total_amount"/>
                                            </t>
                                            <t t-if="not o.remaining_installments_total_amount">
                                                0.0
                                            </t>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <!--Loan Paid Installment Information-->
                            <t t-if="o.line_ids">
                                <table class="table table-bordered"
                                       width="100%" height="100%">
                                    <thead>
                                        <tr bgcolor="#D3D3D3">
                                            <th height="10%"
                                                class="text-center" colspan="3">
                                                Paid Installments
                                            </th>
                                        </tr>
                                        <tr>
                                            <th height="10%"
                                                class="text-center">
                                                <b>Paid Date</b>
                                            </th>
                                            <th height="10%"
                                                class="text-center">
                                                <b>Amount</b>
                                            </th>

                                            <th height="10%"
                                                class="text-center">
                                                <b>Remarks</b>
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.line_ids" t-as="installment">
                                            <t t-if="installment.state == 'done'">
                                                <tr>
                                                    <td height="10%"
                                                        class="text-center">
                                                        <span
                                                                t-esc="installment.paid_date"/>
                                                    </td>

                                                    <td height="10%"
                                                        class="text-right">
                                                        <span
                                                                t-esc="installment.amount"/>
                                                    </td>
                                                    <!--<td height="10%"-->
                                                    <!--class="text-center">-->
                                                    <!--&lt;!&ndash;<span t-esc="dict(installment.fields_get(['state'])['state']['selection'])"/>&ndash;&gt;-->
                                                    <!--&lt;!&ndash;<span t-esc="installment._fields['state'].selection"/>&ndash;&gt;-->
                                                    <!--<t t-esc="dict(installment.fields_get(allfields=['state'])['state']['selection'])[installment.state]"/>-->

                                                    <!--</td>-->
                                                    <td height="10%"
                                                        class="text-center">
                                                        <span
                                                                t-esc="installment.remarks"/>
                                                    </td>

                                                </tr>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <!--Loan remaining Installment Information-->
                            <t t-if="o.line_ids">
                                <table class="table table-bordered"
                                       width="100%" height="100%">
                                    <thead>
                                        <tr bgcolor="#D3D3D3">
                                            <th height="10%"
                                                class="text-center" colspan="4">
                                                Remaining Installments
                                            </th>
                                        </tr>
                                        <tr>
                                            <th height="10%"
                                                class="text-center">
                                                <b>Due Date</b>
                                            </th>
                                            <th height="10%"
                                                class="text-center">
                                                <b>Amount</b>
                                            </th>
                                            <th height="10%"
                                                class="text-center">
                                                <b>Status</b>
                                            </th>

                                            <th height="10%"
                                                class="text-center">
                                                <b>Remarks</b>
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.line_ids" t-as="installment">
                                            <t t-if="installment.state != 'done'">
                                                <tr>
                                                    <td height="10%"
                                                        class="text-center">
                                                        <span
                                                                t-esc="installment.due_date"/>
                                                    </td>

                                                    <td height="10%"
                                                        class="text-right">
                                                        <span
                                                                t-esc="installment.amount"/>
                                                    </td>
                                                    <td height="10%"
                                                        class="text-center">
                                                        <t t-esc="dict(installment.fields_get(allfields=['state'])['state']['selection'])[installment.state]"/>

                                                    </td>
                                                    <td height="10%"
                                                        class="text-center">
                                                        <span
                                                                t-esc="installment.remarks"/>
                                                    </td>

                                                </tr>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                                <t t-if="o.reject_reason">
                                    <table class="table table-bordered"
                                           width="100%" height="100%"
                                           style="border: 1px solid #000000;font-size:13px">
                                        <tbody>
                                            <tr>
                                                <td height="10%" width="15%"
                                                    class="text-center">
                                                    <b>Reject Reason</b>
                                                </td>
                                                <td height="10%" width="85%"
                                                    class="text-center">
                                                    <span t-esc="o.reject_reason"/>
                                                </td>

                                            </tr>
                                        </tbody>
                                    </table>
                                </t>
                            </t>
                        </div>
                </t>
            </t>
        </t>
        </t>
    </template>
</odoo>
