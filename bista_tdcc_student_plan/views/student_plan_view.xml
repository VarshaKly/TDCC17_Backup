<odoo>

    <!-- Student Plan tree View-->
    <record model="ir.ui.view" id="tdcc_student_plan_tree">
        <field name="name">student.plan.tree.view</field>
        <field name="model">student.plan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="plan_type"/>
                <field name="student_id"/>
                <!--<field name="parent_id"/>-->
                <field name="lead_educator_id"/>
                <field name="date_produced"/>
                <field name="date_review"/>
            </tree>
        </field>
    </record>

