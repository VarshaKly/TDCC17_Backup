                </header>
                <sheet>
                    <label for="name"/>
                    <h1>
                        <field name="name" required="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="student_id" required="1" domain="[('is_student','=',True)]"
                                options="{'no_create_edit': True}"/>
                            <field name="date_of_birth"/>
                            <!-- <field name="parent_id" required="1" domain="[('is_parent','=',True)]"
                                options="{'no_create_edit': True}"
                                attrs="{'invisible': [('plan_type','=','iep_summer')]}"/> -->
                            <field name="term_id" required="1" options="{'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="plan_type" required="1"/>
                            <field name="lead_educator_id" domain="[('is_teacher','=',True)]"
                                options="{'no_create_edit': True}"/>
                            <field name="educator_id" domain="[('is_teacher','=',True)]"
                                options="{'no_create_edit': True}"
                                attrs="{'invisible': [('plan_type','=','iep_summer')]}"/>
                            <field name="director_educator_id" options="{'no_create_edit': True}"/>
                        </group>
                        <group attrs="{'invisible': [('plan_type','!=', 'iep_summer')]}">
                            <field name="service_group_id" options="{'no_create_edit': True}"/>
                            <field name="no_of_weeks" options="{'no_create_edit': True}"/>
                            <field name="speech_therapist_id" options="{'no_create_edit': True}"/>
                        </group>
                        <group attrs="{'invisible': [('plan_type','!=', 'iep_summer')]}">
                            <field name="occupational_therapist_id" options="{'no_create_edit': True}"/>
                            <field name="educator_ids" options="{'no_create_edit': True}"
                            widget="many2many_tags" domain="[('is_teacher','=',True)]"/>
                        </group>
                        <group>
                            <field name="date_produced"/>
                        </group>
                        <group>
