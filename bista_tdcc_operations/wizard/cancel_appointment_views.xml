<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="appointment_cancel_view_form" model="ir.ui.view">
        <field name="name">appointment.cancel.view.form</field>
        <field name="model">appointment.cancel</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="with_end_date" invisible="1"/>
                        <field name="cancel_reason_id" widget="selection"/>
                        <field name="client_id" context="{'from_group_appointment':True, 'active_id':active_id, 'active_model': active_model}" 
                               options="{'no_create':True,'no_open':True}"
                               attrs="{'invisible': [('active_model','!=','group.appointment.booking')]}"/>
                    </group>
                    <group>
                        <field name="from_date" attrs="{'invisible' : [('with_end_date', '=', False)]}"/>
                        <field name="to_date" attrs="{'invisible' : [('with_end_date', '=', False)]}"/>
                    </group>
                </group>
                <footer>
                    <button string="Confirm" name="action_cancel_send" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="appointment_cancel_action" model="ir.actions.act_window">
            <field name="name">Cancel Appointments</field>
            <field name="res_model">appointment.cancel</field>
            <field name="view_mode">form</field>
            <field name="context">{'default_with_end_date':True}</field>
            <field name="target">new</field>
    </record>

</odoo>
