<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_partner_form_Hibah">
        <field name="name">view.partner.form.Hibah</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='property_account_payable_id']" position="after">
                <field name="is_sponsor" invisible="1"/>
                <field
                    name="account_sponsor_id"
                    domain="[('deprecated', '=', False),('internal_group','=', 'liability')]"
                    attrs="{'invisible': [('is_sponsor', '!=', True)],
                    'required': [('is_sponsor','=',True)]}"
                />
            </xpath>
        </field>
    </record>

</odoo>
