<odoo>
    <data>

        <!-- Form view of EIIP Groups -->
        <record id="form_view_eiip_group" model="ir.ui.view">
            <field name="name">form.view.eiip.group</field>
            <field name="model">eiip.group</field>
            <field name="arch" type="xml">
                <form string="Intensive Program  Groups">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="clinic_id"/>
                            <field name="faculty_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- Tree view of EIIP Groups -->
        <record id="tree_view_eiip_group" model="ir.ui.view">
            <field name="name">tree.view.eiip.group</field>
            <field name="model">eiip.group</field>
            <field name="arch" type="xml">
                <tree string="Intensive Program Groups" editable="bottom">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="clinic_id" invisible="1"/>
                    <field name="faculty_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <!-- Form View of Student Enroll -->
        <record model="ir.ui.view" id="student_enroll_form">
            <field name="name">student.enroll.form</field>
            <field name="model">student.enroll</field>
            <field name="arch" type="xml">
                <form string="Student Enrollment">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group col="4">
                            <field name="student_id" domain="[('is_student','=',True)]"/>
                            <field name="group_id"/>
                            <field name="join_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view of EIIP Student Enroll -->
        <record id="tree_view_eiip_student_enroll" model="ir.ui.view">
            <field name="name">tree.view.eiip.student.enroll</field>
            <field name="model">student.enroll</field>
            <field name="arch" type="xml">
                <tree string="Intensive Program Student Enroll">
                    <field name="student_id"/>
                    <field name="join_date"/>
                    <field name="end_date"/>
                    <field name="group_id"/>
                </tree>
            </field>
        </record>

        <record id="search_eiip_student_enroll" model="ir.ui.view">
            <field name="name">Student Enroll Search</field>
            <field name="model">student.enroll</field>
            <field name="arch" type="xml">
                <search>
                    <field name="student_id"/>
                    <field name="group_id"/>
                    <filter name="group_student_id" string="Student" context="{'group_by': 'student_id'}"/>
                    <filter name="group_group_id" string="Group" context="{'group_by': 'group_id'}"/>
                </search>
            </field>
        </record>

        <!-- Action for EIIP Group -->
        <record id="action_eiip_group" model="ir.actions.act_window">
            <field name="name">Intensive Program Groups</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">eiip.group</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <!-- Action for EIIP Student Enroll -->
        <record id="action_eiip_student_enroll"
                model="ir.actions.act_window">
            <field name="name">Intensive Program Student Enroll</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.enroll</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <!-- Group Form Menu -->
        <menuitem name="Groups" id="eiip_group_form_menu"
                  action="action_eiip_group"
                  parent="bista_tdcc_operations.eip_menu" active="False"/>

        <!-- Student Enroll Form Menu -->
        <menuitem name="Student Enrollment"
                  id="eiip_student_enroll_form_menu"
                  action="action_eiip_student_enroll"
                  parent="bista_tdcc_operations.eip_menu" active="False"/>

    </data>
</odoo>
