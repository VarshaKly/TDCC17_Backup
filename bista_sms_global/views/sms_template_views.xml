        <record id="action_sms_template" model="ir.actions.act_window">
            <field name="name">SMS Templates</field>
            <field name="res_model">sms.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="sms_template_tree"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a Short Message Service templates.
              </p>
            </field>
        </record>

        <menuitem action="action_sms_template" id="menu_action_sms_template_tree" 
                parent="bista_sms_global.menu_sms" sequence="2"/>

</odoo>
