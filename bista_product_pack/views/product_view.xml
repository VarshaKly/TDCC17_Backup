<odoo>
    <data>
        <record id="product_template_form_view_inherited" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id"
                   ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="is_pack"/>
                        <label for="is_pack"/>
                    </div>
                </xpath>
                <xpath expr="//page[@name='purchase']" position="after">
                    <page string="Product Pack"
                          attrs="{'invisible': [('is_pack', '!=', True)]}">
                        <group>
                            <field mode="tree" name="pack_ids" nolabel="1">
                                <tree string="Product Details"
                                      editable="bottom">
                                    <field name="product_id"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
                <field name="barcode" position="after">
                    <field name="pricelist_type"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
