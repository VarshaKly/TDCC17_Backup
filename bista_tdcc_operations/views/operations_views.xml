              parent="bista_tdcc_operations.miscellaneous_configuration_menu"
              sequence="11"/>

    <menuitem id="product_pricelist_menu" name="Price List"
              action="product.product_template_action_all"
              parent="bista_tdcc_operations.miscellaneous_configuration_menu"
              sequence="9"/>

