<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--loan Form View-->
    <record id="finance_lease_loan_form_view" model="ir.ui.view">
        <field name="name">Account loan Form</field>
        <field name="model">account.loan</field>
        <field name="arch" type="xml">
            <form string="Finance Lease Request">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="action_draft" string="Set to Draft" type="object" class="btn-primary" states="cancelled"/>

                    <!--Send Request for Finance Approval-->
                    <button name="action_submit_for_finance_lease_approval"
                            type="object"
                            string="Submit for Finance Approval "
                            class="btn-primary"
                            states="draft"/>
                    <button name="action_submit_loan_reject"
                            type="object"
                            string="Reject"
                            class="btn-primary"
                            context="{'reject_from': 'Finance Department'}"
                            groups="account.group_account_manager"
                            states="draft"/>
                    <!-- <button name="action_submit_loan_cancelled"
                        type="object" string="Cancel Request" states="draft"/> -->

                    <!--Approve loan Request-->
                    <button name="action_approved_loan"
                            type="object"
                            string="Approve"
                            class="btn-primary"
                            groups="account.group_account_manager"
                            states="finance_processing"/>
                    <button name="action_submit_loan_reject"
                            type="object"
                            string="Reject Request"
                            context="{'reject_from': 'Finance Department'}"
                            class="btn-primary"
                            groups="account.group_account_manager"
                            states="finance_processing"/>

                    <button name="%(account_loan_history_action)d"
                    type="action" string="Change Rate" attrs="{'invisible': [('state', '!=', 'approved')]}" groups="account.group_account_manager"/>

                    <button name="%(finance_lease_pay_full_amount_action)d" type="action" string="Pay Full Amount" attrs="{'invisible': ['|',('state', '!=', 'approved'),('remaining_installments_total_amount','=',0.0)]}"/>

                    <button name="action_submit_loan_cancelled"
                            type="object"
                            string="Cancel"
                            states="draft"/>

                    <!-- <button name="action_submit_loan_cancelled"
                            type="object"
                            string="Cancel Request"
                            states="finance_processing"/> -->
                </header>
                <sheet>
                    <div class="oe_button_box">
                        <button name="view_account_moves"
                                class="oe_stat_button"
                                icon="fa-book"
                                attrs="{'invisible': [('state', '=', 'draft')]}"
                                type="object" string="Accounting Entries"/>
                        <!-- <button name="action_open_journal_entries"
                                class="oe_stat_button"
                                icon="fa-book"
                                string="Accounting Entries"
                                groups="account.group_account_manager"
                                attrs="{'invisible': [('account_move_id', '=', False)]}"
                                type="object">
                        </button> -->
                    </div>
                    <h1 class="mt0">
                        <field name="name" readonly="1" class="oe_inline"/>
                    </h1>

                    <group>
                        <group >
                            <field name="partner_id" string="Vendor"
                                   readonly="0" required="1"
                                   attrs="{'readonly':
                                   [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="loan_issuing_date" attrs="{'invisible': [('loan_issuing_date', '=', False)]}" readonly="1"/>
                             <field name="start_date" attrs="{'readonly': [('state', '!=', 'draft')]}" required="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Installment Calculator">
                            <group colspan="2" col="2">
                                <group colspan="2" col="2">
                                    <div>
                                        Kindly, Click on the Calculate button
                                        to
                                        get more details about the installments
                                        schedule.
                                    </div>
                                </group>
                                <group colspan="2" col="2">
                                    <field name="loan_amount" required="1" attrs="{'readonly': [('state', 'in', ('done','approved', 'rejected', 'cancelled'))]}"/>
                                    <label for="installment_number" />
                                    <div>
                                        <field name="installment_number" attrs="{'readonly': [('state', 'in', ('done','approved', 'rejected', 'cancelled'))]}" required="1"/>
                                    </div>
                                </group>
                                <group>
                                    <label for="rate" />
                                    <div>
                                        <field name="rate" attrs="{'readonly': [('state', 'in', ('done','approved', 'rejected', 'cancelled'))]}" class="oe_inline"/>%
                                        <field name="rate_period" invisible="1"/>
                                    </div>
                                </group>
                            </group>
                            <group>
                                <div>
                                    <button name="calculate_loan_amount"
                                            type="object"
                                            string="Calculate Installment"
                                            class="btn-primary"
                                            attrs="{'invisible': ['|',('state', 'in', ('draft', 'rejected', 'cancelled', 'approved','done'))]}"
                                    groups="account.group_account_manager"/>

                                    <button name="clear_installment_line"
                                            type="object"
                                            string="Clear All Lines"
                                            class="btn-primary"
                                            attrs="{'invisible': [('state', '!=', 'finance_processing')]}"
                                    groups="account.group_account_manager"/>

                                </div>
                                <group col="2" colspan="2"
                                       string="loan Installments">
                                    <field name="line_ids"
                                           nolabel="1"
                                           attrs="{'readonly': [('state', '!=', 'draft')]}">
                                        <tree string="Finance Lease Installments"
                                              default_order="due_date"
                                              create="false" delete="false">
                                            <field name="sr_number" />
                                            <field name="due_date"/>
                                            <field name="rate_month" invisible="1"/>
                                            <field name="rate" invisible="1"/>
                                            <field name="amount"/>
                                            <field name="interest_amount"/>
                                            <field name="total_amount"/>
                                            <field name="remaining_amount"  />
                                            <field name="hide_payment_btn" invisible="1"/>
                                            <field name="state" readonly="1"
                                                   required="1"/>
                                            <button name="%(finance_lease_pay_amount_line_action)d"
                                                attrs="{'invisible': [('hide_payment_btn', '=', False)]}"
                                                class="oe_stat_button" icon="fa-usd"

                                                type="action" string="Pay amount"/>
                                            <!-- <button name="ask_for_reschedule"
                                                    type="object"
                                                    class="fa fa-repeat"
                                                    attrs="{'invisible': [('state', '=', 'done')]}"
                                            /> -->
                                        </tree>
                                    </field>
                                </group>
                            </group>
                            <group class="oe_subtotal_s oe_right">
                                <field name="total_paid_installment_amount"
                                       class="oe_subtotal_footer_separator"
                                       widget="monetary"/>
                                <field name="remaining_installments_total_amount"
                                       class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <!--Accounting Page-->
                        <page string="Accounting Information">
                            <group colspan="4" col="4"  >
                                <field name="loan_journal_id" attrs="{'required': [('state', '=', 'finance_processing')]}"/>
                                <newline/>
                                <field name="debit_account_id" attrs="{'required': [('state', '=', 'finance_processing')]}"/>
                                <field name="credit_account_id" attrs="{'required': [('state', '=', 'finance_processing')]}"/>

                            </group>
                        </page>
                        <page string="Rate History" id="history" attrs="{'invisible':[('loan_history_ids','=',False)]}">
                            <field name="loan_history_ids" readonly="1">
                                <tree>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="rate"/>
                                </tree>
                            </field>

                        </page>
                        <page string="Comments" name="comments">
                            <label for="comments" string="Comments"/>
                            <field name="comments" placeholder="Comments"/><br/>
                            <label for="reject_reason" string="Reject Reason" attrs="{'invisible':[('reject_reason','=',False)]}"/>
                            <field name="reject_reason" readonly="1" placeholder="Reject reason" attrs="{'invisible':[('reject_reason','=',False)]}"/>
                            <field name="loan_approve_date" invisible="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <!--Loan Tree View-->
    <record id="account_loan_tree_view" model="ir.ui.view">
        <field name="name">Loan Request</field>
        <field name="model">account.loan</field>
        <field name="arch" type="xml">
            <tree string="Loan Request">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="installment_number"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="loan_approve_date"/>
                <field name="loan_amount" sum="Loan Amount"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Loan Search View-->
    <record id="loan_request_search_view" model="ir.ui.view">
        <field name="name">loan.request.search.view</field>
        <field name="model">account.loan</field>
        <field name="arch" type="xml">
            <search string="Loan Requests">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="state"/>
                
                <filter string="Pending Finance Approvals"
                        name="pending_finance_approval"
                        domain="[('state','in',['finance_processing'])]"/>
                <group expand="0" string="Group By...">
                    <filter name="group_loan_partner_id" string="customer"
                            context="{'group_by':'partner_id'}"/>
                    <filter name="state" string="State" icon="terp-go-today"
                            domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!--Loan installments form view-->
    <record id="loan_line_form_view" model="ir.ui.view">
        <field name="name">Loan Installments</field>
        <field name="model">account.loan.line</field>
        <field name="arch" type="xml">
            <form string="Loan Installments">
                <header>
                    <button name="ask_for_reschedule"
                            context="{'trigger': 'Ask for Rescheduling'}"
                            string="Asked for Rescheduling"
                            type="object"
                            states="draft,reject"
                            class="btn-primary"/>

                    <button name="button_reschedule" string="Reschedule"
                            context="{'trigger': 'Reschedule'}"
                            states="ask_for_reschedule" type="object"
                            class="btn-primary"/>
                     <button name="button_reject" string="Reject"
                            context="{'trigger': 'Reschedule'}"
                            states="ask_for_reschedule" type="object"
                            class="btn-primary"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group name="loan_installment_info" colspan="4" col="4">
                        <field name="partner_id"  required="1" readonly="1"
                               attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="due_date" readonly="1" required="1"/>
                        <field name="amount" readonly="1" required="1"/>
                        <field name="loan_id" string="Reference"
                               readonly="1" required="1"/>
                        <field name="paid_amount"/>
                        <field name="residual_amount"/>
                        <field name="prev_due_date" readonly="1"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group  string="Remarks">
                        <field name="remarks"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <!--Loan Installments Tree View-->
    <record id="account_loan_installments_tree" model="ir.ui.view">
        <field name="name">loan Installments</field>
        <field name="model">account.loan.line</field>
        <field name="arch" type="xml">
            <tree string="Loan Installments">
                <field name="loan_id"/>
                <field name="partner_id"/>
                <field name="due_date"/>
                <field name="amount"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="remarks"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Loan Installments Search View -->
    <record id="loan_installments_search_view" model="ir.ui.view">
        <field name="name">account.loan.line.search.view</field>
        <field name="model">account.loan.line</field>
        <field name="arch" type="xml">
            <search string="Loan Installments">
                <field name="partner_id"/>
                <field name="loan_id"/>
                <field name="due_date"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state"/>
                <filter string="Ask for Reschedule"
                        name="ask_for_reschedule"
                        domain="[('state','in',['ask_for_reschedule'])]"/>
                <group expand="0" string="Group By...">
                    <filter name="group_partner_id" string="Customer"
                            context="{'group_by':'partner_id'}"/>
                    <filter string="Loan Request" name="group_loan_request"
                            context="{'group_by':'loan_id'}"/>
                    <filter string="Due Date" name="group_month"
                            context="{'group_by':'due_date'}"/>
                    <filter name="group_status" string="Status"
                            icon="terp-go-today"
                            domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>