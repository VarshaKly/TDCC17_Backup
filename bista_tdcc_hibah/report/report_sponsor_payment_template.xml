<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <template id="sponsor_payment_header_footer">
            <div class="header">
                <t t-if="doc and 'company_id' in doc">
                    <t t-set="company" t-value="doc.company_id.sudo()" />
                </t>
                <t t-if="not doc or not 'company_id' in doc">
                    <t t-set="company" t-value="res_company" />
                </t>
                <div class="row mb8">
                    <div class="col-6">
                        <img t-if="company.logo"
                            t-att-src="image_data_uri(company.logo)" alt="Logo" height="150" />
                    </div>
                    <div class="col-6 text-right mb4">
                        <div name="company_address" class="mb4">
                            <ul class="list-unstyled">
                                <strong>
                                    <li>
                                        <span t-esc="company.name" />
                                    </li>
                                </strong>
                                <li t-if="company.street">
                                    <span t-field="company.street" />
                                </li>
                                <li t-if="company.state_id">
                                    <span t-field="company.state_id.name" />
                                    <t t-if="company.country_id">
                                        ,
                                        <span t-esc="company.country_id.name" />
                                    </t>
                                </li>
                                <li t-if="company.zip">
                                    P.O Box
                                    <span t-field="company.zip" />
                                </li>
                                <li t-if="company.phone">
                                    Telephone :
                                    <span t-field="company.phone" />
                                </li>
                                <li t-if="company.email">
                                    Email :
                                    <span t-field="company.email" />
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="article" t-att-data-oe-model="doc and doc._name"
                t-att-data-oe-id="doc and doc.id"
                t-att-data-oe-lang="doc and doc.env.context.get('lang')">
                <t t-raw="0" />
            </div>

            <div class="footer">
                <div style="border-top: 1px solid black;">
                    <center>
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <b>
                                <span t-esc="company.name" style="font-size: 10pt;" />
                            </b>
                            &amp;nbsp;|
                        </li>
                        <li class="list-inline-item">
                            <t t-if="company.zip">
                                <span style="font-size: 10pt;">PO Box</span>
                                <span t-esc="company.zip" style="font-size: 10pt;" />
                            </t>
                            <t t-if="company.zip">
                                <span t-esc="company.state_id.name" style="font-size: 12pt;" />,UAE&amp;nbsp;|
                            </t>
                        </li>
                        <li class="list-inline-item" t-if="company.zip">
                            <span style="font-size: 10pt;">Call &amp;nbsp;</span>
                            <span t-esc="company.phone" style="font-size: 12pt;" />
                            &amp;nbsp;|
                        </li>
                        <li class="list-inline-item" t-if="company.email">
                            <span t-esc="company.email" style="font-size: 12pt;" />
                            &amp;nbsp;|
                        </li>
                        <li class="list-inline-item" t-if="company.website">
                            <b>
                                <span t-esc="company.website" style="font-size: 10pt;" />
                            </b>
                        </li>
                    </ul>
                    <div class="text-muted">
                        Page:
                        <span class="page" />
                        of
                        <span class="topage" />
                    </div>
                </center>
                </div>
            </div>
        </template>

        <template id="report_sponsor_payment_document">
            <t t-call="bista_tdcc_hibah.sponsor_payment_header_footer">
                <t t-set="doc" t-value="doc.with_context({'lang':doc.lang})" />
                <t t-set="current_date"
                    t-value="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')" />
                <div class="page">
                    <style>
                        div, span {
                        font-size: 12pt;
                        }
                    </style>
                    <div
                        style="margin-top: 20px;font-size: large;font-weight: bold;">
                        <center>
                            <t t-if="from_date and to_date">
                                Payment Details From
                                <t t-esc="from_date" />
                                To
                                <t t-esc="to_date" />
                            </t>
                            <t t-elif="from_date and not to_date">
                                Payment Details From
                                <t t-esc="from_date" />
                                To
                                <t t-esc="current_date" />
                            </t>
                            <t t-elif="not from_date and to_date">
                                Payment Details upto
                                <t t-esc="to_date" />
                            </t>
                            <t t-else="">
                                Payment Details upto
                                <t t-esc="current_date" />
                            </t>
                        </center>
                    </div>
                    <div style="margin-top: 20px;">
                        <p>
                            <strong>Sponsor Name :</strong>
                            <span t-esc="doc.name" />
                        </p>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-12">
                            <table class="table table-borderless">
                                <thead>
                                    <tr>
                                        <th>Student</th>
                                        <th>Invoice Date</th>
                                        <th>Number</th>
                                        <th>Responsible</th>
                                        <th>Due Date</th>
                                        <th>Source Document</th>
                                        <th class="text-right">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="total" t-value="0"/>
                                    <tr t-foreach="get_sponsor_data_from_report" t-as="each">
                                        <td>
                                            <span t-esc="each.get('student')" />
                                        </td>
                                        <td>
                                            <span t-esc="each.get('invoice_date')" />
                                        </td>
                                        <td>
                                            <span t-esc="each.get('number')" />
                                        </td>
                                        <td>
                                            <span t-esc="each.get('responsible')" />
                                        </td>
                                        <td>
                                            <span t-esc="each.get('duedate')" />
                                        </td>
                                        <td>
                                            <span t-esc="each.get('SouceDoc')" />
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="each.get('amount')"
                                                t-options="{'widget': 'monetary',
                                                              'display_currency': res_company.currency_id}" />
                                            <t t-set="total" t-value="total+each.get('amount')" />
                                        </td>
                                    </tr>
                                    <tr style="border-top:1px solid black;">
                                        <td colspan="6" align="right"> 
                                            <b> <t t-esc="total"/></b>
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="report_sponsor_payment">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="bista_tdcc_hibah.report_sponsor_payment_document" />
                </t>
            </t>
        </template>

</odoo>