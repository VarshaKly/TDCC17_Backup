<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="seq_hr_employee" model="ir.sequence">
            <field name="name">HR Employee</field>
            <field name="code">hr.employee</field>
            <field name="prefix">EMP</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_document_request" model="ir.sequence">
            <field name="name">Document Request</field>
            <field name="code">document.request</field>
            <field name="prefix">DR</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="contact_sequence" model="ir.sequence">
            <field name="name">Contact Sequence</field>
            <field name="code">res.partner.sequence</field>
            <field name="prefix">TDCC</field>
            <field eval="6" name="padding"/>
            <field name="number_increment">1</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="update_sequence_res_partner" model="ir.actions.server">
            <field name="name">Update Sequence</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                action = records.update_sequence()
            </field>
        </record>

    </data>
</odoo>